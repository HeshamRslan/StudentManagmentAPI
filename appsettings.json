{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning",
      "StudentManagementAPI": "Information",
      "StudentManagementAPI.Services.Infrastructure.CacheService": "Debug"
    },
    "FilePath": "Logs/app-.log",
    "JsonFilePath": "Logs/app-.json",
    "RetentionDays": 30
  },

  "AllowedHosts": "*",

  "ArchiveSettings": {
    "Enabled": true,
    "IntervalMinutes": 10,
    "ArchiveAfterMonths": 6
  },

  "CacheSettings": {
    "EnableCaching": true,
    "StudentsExpirationMinutes": 5,
    "ClassesExpirationMinutes": 10,
    "EnrollmentsExpirationMinutes": 3,
    "MarksExpirationMinutes": 2,
    "ReportsExpirationSeconds": 30
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}